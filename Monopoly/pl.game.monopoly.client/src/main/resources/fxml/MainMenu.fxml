<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.game.monopoly.client.controllers.MainAppController">
   <children>
      <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
         <children>
            <VBox alignment="CENTER" prefHeight="343.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="ipField" alignment="CENTER" onKeyReleased="#IpFieldKeyReleased" prefHeight="25.0" prefWidth="150.0" />
                  <Button fx:id="connectToTheServerButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#connectToTheServerButtonClicked" text="Dołącz do serwera" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
